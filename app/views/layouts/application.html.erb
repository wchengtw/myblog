<!DOCTYPE html>
<html>
  <head>
    <title>MyBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Google Fonts (Inter) -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' %>

    <!-- Application-specific styles and JavaScript -->
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>

    <!-- Custom Styles -->
    <style>
      body {
        font-family: 'Inter', sans-serif;
        background: linear-gradient(to right, #f7f7f7, #ffffff);
      }
      .navbar {
        background-color: #f8f9fa;
        border-bottom: 2px solid #007bff;
      }
      .navbar-brand {
        font-weight: bold;
        color: #007bff;
      }
      .btn-primary {
        background-color: #007bff;
        border: none;
      }
      .btn-danger {
        background-color: #dc3545;
      }
      .container {
        padding-top: 20px;
      }
    </style>
  </head>

  <body>
    <!-- Navigation bar -->
    <nav class="navbar navbar-expand-lg">
      <a class="navbar-brand" href="#">MyBlog</a>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <%= form_with url: destroy_user_session_path, method: :delete do %>
              <%= submit_tag 'Log out', class: 'btn btn-danger' %>
            <% end %>
          <% else %>
            <%= link_to 'Log in', new_user_session_path, class: 'btn btn-primary' %>
          <% end %>
        </ul>
      </div>
    </nav>

    <!-- Main content -->
    <div class="container mt-4">
      <%= yield %>
    </div>

    <!-- Optional JavaScript for Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  </body>
</html>

